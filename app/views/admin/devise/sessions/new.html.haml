.container
  .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
    .login-panel.panel.panel-default
      .panel-heading
        %h2.text-center.mb20
          = AdminUser.model_name.human
      .panel-body
        = simple_form_for(resource, as: resource_name, wrapper: 'default' , url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, placeholder: AdminUser.human_attribute_name(:email), required: false, autofocus: true, input_html: {class: "form-control"}
            = f.input :password, placeholder: AdminUser.human_attribute_name(:password), required: false, input_html: {class: "form-control"}
            = f.input :remember_me, placeholder: AdminUser.human_attribute_name(:remember_me),input_html:{class:"remember"}, as: :boolean if devise_mapping.rememberable?
          %div.devise-button
            = f.button :submit, t("views.login") ,class: "btn btn-block btn-lg btn-success"  
