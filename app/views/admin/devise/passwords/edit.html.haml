.container
  .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
    .login-panel.panel.panel-default
      .panel-heading
        %h2.text-center.mb20
          Change your password
      .panel-body
        = simple_form_for(resource, as: resource_name, wrapper: 'default', url: password_path(resource_name), html: { method: :put }) do |f|
          = f.error_notification
          = f.input :reset_password_token, as: :hidden
          = f.full_error :reset_password_token
          .form-inputs          
            = f.input :password, label: "New Password", autofocus: true, placeholder: AdminUser.human_attribute_name(:password), required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "form-control"}
            = f.input :password_confirmation, label: "Confirm New Password", placeholder: AdminUser.human_attribute_name(:password_confirmation), required: false, input_html: {class: "form-control"}            
          %div.devise-button
            = f.button :submit, "Change my password", class: "btn btn-block btn-lg btn-success"
        = render "devise/shared/links"